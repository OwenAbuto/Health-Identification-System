class Patient:
    def __init__(self, name, age, medical_history):
        self.name = name
        self.age = age
        self.medical_history = medical_history

class HealthIdentificationSystem:
    def __init__(self):
        self.patients = []

    def add_patient(self, name, age, medical_history):
        patient = Patient(name, age, medical_history)
        self.patients.append(patient)
        print(f"Patient {name} added to the system.")

    def find_patient(self, name):
        for patient in self.patients:
            if patient.name == name:
                print(f"Patient Information:\nName: {patient.name}\nAge: {patient.age}\nMedical History: {patient.medical_history}")
                return
        print(f"Patient with name {name} not found in the system.")

    def list_patients(self):
        print("List of Patients:")
        for patient in self.patients:
            print(f"Name: {patient.name}, Age: {patient.age}")

if __name__ == "__main__":
    health_system = HealthIdentificationSystem()
    while True:
        print("\nHealth Identification System Menu:")
        print("1. Add Patient")
        print("2. Find Patient")
        print("3. List Patients")
        print("4. Exit")
        choice = input("Enter your choice: ")
        
        if choice == "1":
            name = input("Enter patient's name: ")
            age = input("Enter patient's age: ")
            medical_history = input("Enter patient's medical history: ")
            health_system.add_patient(name, age, medical_history)
        elif choice == "2":
            name = input("Enter patient's name to find: ")
            health_system.find_patient(name)
        elif choice == "3":
            health_system.list_patients()
        elif choice == "4":
            print("Exiting the Health Identification System. Goodbye!")
            break
        else:
            print("Invalid choice. Please choose a valid option.")

